@using ProjectManagement.DataLayer.DTOs.Common
@using ProjectManagement.DataLayer.Entities.Common
@model NewsDto
@{
    ViewData["Title"] = "افزودن اطلاعیه";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}
@section Css {
	<style>
		.ck-content {
			color: black;
		}
	</style>
}

<div class="scroll-y px-10 px-lg-15 pt-0 pb-15 request-form">
	<form id="kt_modal_new_target_form" asp-action="AddNews" asp-controller="News" asp-area="Teacher" method="post" class="form">
		<!--begin::Heading-->
		<div class="mb-13 text-center">
			<!--begin::Title-->
			<h1 class="mb-3">ثبت اطلاعیه</h1>
			<!--end::Title-->
			<!--begin::توضیحات-->
			<div class="text-muted fw-bold fs-5">
				اطلاعیه مورد نظر خود را طبق فیلدهای زیر تکمیل کنید تا برای دانشجویان نمایش داده شود.
			</div>
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="p-3 mb-2 bg-success text-white" style="margin-top: 10px;">
					@TempData["SuccessMessage"]
				</div>
			}
			else if (TempData["ErrorMessage"] != null)
			{
				<div class="p-3 mb-2 bg-danger text-white" style="margin-top: 10px;">
					@TempData["ErrorMessage"]
				</div>
			}
			<!--end::توضیحات-->
		</div>
		<div class="d-flex flex-column mb-8 fv-row">
			<label class="d-flex align-items-center fs-6 fw-bold mb-2">
				<span class="required">عنوان اطلاعیه</span>
				<i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip"
					title="یک عنوان مناسب که بتواند اطلاعیه شما رو در چند کلمه معرفی کند"></i>
			</label>
			<input type="text" asp-for="Title" class="form-control form-control-solid" placeholder="عنوان" />
			<span class="text-danger" asp-validation-for="Title"></span>
		</div>
		<!--end::Input group-->
		<!--begin::Input group-->
		<div class="row g-9 mb-8">
			<!--begin::Col-->
			<div class="col-md-6 fv-row">
				<label class="required fs-6 fw-bold mb-2">دسته بندی اطلاعیه</label>
				<select asp-for="Type" class="form-select form-select-solid"
						asp-items="@(Html.GetEnumSelectList<InfoType>())" data-control="select2" data-hide-search="true"
						data-placeholder="دسته بندی">
					<option value="" selected disabled hidden>انتخاب کنید...</option>
				</select>
				<span class="text-danger" asp-validation-for="Type"></span>
			</div>
			<!--end::Col-->
			<!--begin::Col-->
			<div class="col-md-6 fv-row">
				<label class="required fs-6 fw-bold mb-2">میزان اهمیت</label>
				<select asp-for="Importance" class="form-select form-select-solid"
					asp-items="@(Html.GetEnumSelectList<Importance>())" data-control="select2" data-hide-search="true"
					data-placeholder="انتخاب پلتفرم">
					<option value="" selected disabled hidden>انتخاب کنید...</option>
				</select>
				<span class="text-danger" asp-validation-for="Importance"></span>
			</div>
			<!--end::Col-->			
		</div>
		<!--end::Input group-->

		<!--begin::Input group-->
		<div class="d-flex flex-column mb-8">
			<label class="required fs-6 fw-bold mb-2">متن اطلاعیه</label>
			<textarea asp-for="Body" class="form-control form-control-solid" ckeditor="1" rows="3"
				placeholder="شرح دهید"></textarea>
			<span class="text-danger" asp-validation-for="Body"></span>
		</div>				
	
		<div class="text-center">
			<button type="submit" id="kt_modal_new_target_submit" class="btn btn-primary">
				<span class="indicator-label">ثبت اطلاعیه</span>
			</button>
		</div>
	</form>
</div>