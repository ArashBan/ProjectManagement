    <!--begin::Fonts-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
    <!--end::Fonts-->
    <!--begin::Global Stylesheets Bundle(used by all pages)-->
    <link href="~/Theme/assets/plugins/global/plugins.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <link href="~/Theme/assets/css/style.bundle.rtl.css" rel="stylesheet" type="text/css" />
    <!--end::Global Stylesheets Bundle-->
</head>
<!--end::Head-->
<!--begin::Body-->
<body id="kt_body" class="bg-dark">
    <!--begin::Main-->
    <!--begin::Root-->
    <div class="d-flex flex-column flex-root">
        <!--begin::احراز هویت - ورود -->
        <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url('./Theme/assets/media/illustrations/sketchy-1/14-dark.png')">
            <!--begin::Content-->
            <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
                <!--begin::Logo-->
                <a class="mb-12">
                    <img alt="Logo" src="~/images/pwa-icons/icon-512x512-removebg-preview.png" style="width: 100px; height: 100px !important;" class="h-40px" />
                </a>
                <!--end::Logo-->

                <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
                    <form asp-action="Login" asp-controller="Account" class="form w-100" novalidate="novalidate" id="kt_sign_in_form" method="post">
                        <div class="text-center mb-10">
                            <h1 class="text-dark mb-3">ورود به سامانه</h1>
                            <div class="text-gray-400 fw-bold fs-4">
                                نام کاربری و کلمه عبور خود را جهت ورود به سامانه وارد کنید.
                            </div>
                        </div>
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="p-3 mb-2 bg-danger text-white">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                        <div class="fv-row mb-10">
                            <label class="form-label fs-6 fw-bolder text-dark">نام کاربری</label>
                            <input asp-for="Username" class="form-control form-control-lg form-control-solid" type="text" />
                        </div>
                        <div class="fv-row mb-10">
                            <div class="d-flex flex-stack mb-2">
                                <label class="form-label fw-bolder text-dark fs-6 mb-0">کلمه عبور</label>
                            </div>
                            <input asp-for="Password" class="form-control form-control-lg form-control-solid" type="password" />
                        </div>

                        <div class="fv-row mb-10">
                            <label class="form-check form-check-custom form-check-solid form-check-inline">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                <span class="form-check-label fw-bold text-gray-700 fs-6">
                                    مرا به خاطر بسپار
                                </span>
                            </label>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-lg btn-primary w-100 mb-5">
                                <span class="indicator-label">ورود</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!--end::Content-->

            <!--begin::Footer-->
            <div class="d-flex flex-center flex-column-auto p-10">
                <!--begin::Links-->
                <div class="d-flex align-items-center fw-bold fs-6">
                    <div class="text-dark order-2 order-md-1" style="margin-top: -30px;">
                        @*								<span class="text-muted fw-bold me-1">2022©</span>
                            <a href="https://keenthemes.com" target="_blank" class="text-gray-800 text-hover-primary">ساتراس وب</a>*@
                        <span class="text-muted fw-bold me-1">1401© | تمام حقوق مادی و معنوی این وب‌سايت متعلق به دانشکده فنی و حرفه ای انقلاب اسلامی است.</span>
                    </div>
                </div>
                <!--end::Links-->
            </div>
            <!--end::Footer-->
        </div>
        <!--end::احراز هویت - ورود-->
    </div>
    <!--end::Root-->
    <!--end::Main-->
    <!--begin::Javascript-->
    <script>var hostUrl = "~/Theme/assets/";</script>
    <!--begin::Global Javascript Bundle(used by all pages)-->
    <script src="~/Theme/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/Theme/assets/js/scripts.bundle.js"></script>
    <!--end::Global Javascript Bundle-->
    <!--begin::Page سفارشی Javascript(used by this page)-->
    <script src="~/Theme/assets/js/custom/authentication/sign-in/general.js"></script>
    <!--end::Page custom Javascript-->
    <!--end::Javascript-->
</body>
<!--end::Body-->
</html>